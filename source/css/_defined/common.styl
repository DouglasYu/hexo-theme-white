// 自定义颜色
$color-theme-main = #3366FF
$color-theme-secondary = #1E3140
$color-text-main = #333333
$color-text-secondary = #898FA0
$color-embellish = #f3f4f5


// 说明
//--color-bg 背景颜色
//--color-theme-main 主题色
//--color-text-main 文字主要颜色
//--color-text-secondary 文字次要颜色
//--color-dress 修饰颜色
//--color-embellish 修饰颜色


:root
  --color-bg #fff
  --color-theme-main #3366FF
  --color-text-main #333333
  --color-text-secondary rgba(51,51,51, 0.4)
  --color-dress rgba(51,51,51, 0.2)
  --color-embellish #f3f4f5


.night
  --color-bg #3b3a3a
  --color-theme-main #1f3fb0
  --color-text-main #e1e1e1
  --color-text-secondary rgba(225, 225, 225, 0.4)
  --color-dress rgba(225, 225, 225, 0.15)
  --color-embellish #444444


// 字体
$font-title = 'Noto Serif SC', serif
$font-content = 'LXGW WenKai Lite', sans-serif
$font-code = 'Roboto Mono', monospace

// 最大宽度
$layout-max-width = 1400px
// 文章内容宽度
$post-max-width = 1000px

// 自适应
$desktop-m = "screen and (max-width:1000px)"
$desktop-s = "screen and (max-width:700px)"
$mobile-m = "screen and (max-width:550px)"
$mobile-s = "screen and (max-width:450px)"

// 字体
