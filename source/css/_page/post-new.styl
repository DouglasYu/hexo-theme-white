//@import "github-markdown.css"
// post-intro
.post-intro
  margin-bottom 30px
.post-title
  text-align center
  font-size 2.15em
  font-weight bold
  margin-bottom 20px
  font-family $font-title
.post-cover
  margin-top 80px
.post-cover-img
  min-width 100%
  max-width: 100%
  height 350px
  object-fit cover
.meta-intro
  font-size .8em
  text-transform : uppercase
  letter-spacing: 1.5px
  text-align center
  color $color-text-secondary
  line-height: 4
  position: relative
  &:after // TODO 这里应该有更好的实现方法
    content ""
    position absolute
    top 0
    left 48%
    right 48%
    bottom 98%
    transition all .4s
    background-color $color-theme-main


// post-content-inner
.post-content-inner
  display flex
  justify-content center
  .post-content-main
    flex-basis $post-max-width
    max-width $post-max-width


// detail post style
.post-content-inner
  font-size 1.32em
  font-family $font-content
  color: $color-text-main
  ul, ol
    padding-left 2em
    margin 20px 0
.post-content-main,.intro-sub
  h1, h2, h3, h4, h5, h6
    margin-top 23px
    margin-bottom 16px
    font-family $font-title
  h1, h2
    &::after
      content "#"
      display inline-block
      color rgba($color-text-main, .15)
      font-family $font-code
      margin-left 0.5rem
      font-weight: border
  code
    background $color-embellish
    font-size 0.85em
    padding 0 7px
    font-family $font-code
  pre
    max-width $post-max-width
    overflow auto
    margin 5px 0
    padding 1em
    background $color-embellish
    > code
      font-family $font-code
      font-size 0.85em
      background none
  p
    margin 20px 0
  img
    max-width 100%
  .lazyload-img-span
    margin 10px 0
  iframe
    width 100%
    aspect-ratio 3.1/2
  hr
    margin 24px 0
    height 3px
    border none
    background-color $color-embellish
  strong
    font-family $font-title
  blockquote
    background $color-embellish
    padding 1em
    border-left 7px solid $color-theme-main
    p
      display contents
  a
    box-shadow-transition()
    &:hover
      box-shadow-transition-hover()
  table
    border-collapse: collapse
    margin: 30px 0px
    width: 100%
    border-width: 2px
    border-style: solid
    border-color: $color-embellish
    border-image: initial
    border-spacing: 0px
    display: table
    thead
      box-shadow: $color-embellish 0px 4px 8px 0px
      display: table-header-group
      vertical-align: middle
      border-color: inherit
    th,td
      padding: .9rem
      border-width: 1px
      border-style: solid
      border-color: $color-embellish
      border-image: initial
    tbody
      display: table-row-group
      vertical-align: middle
      border-color: inherit
      tr
        display: table-row
        vertical-align: inherit
        border-color: inherit
