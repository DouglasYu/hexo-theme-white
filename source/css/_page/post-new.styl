//@import "github-markdown.css"
// post-intro
.post-intro
  margin-bottom 30px
.post-title
  text-align center
  font-size 2.15em
  font-weight bold
  margin-bottom 20px
.post-cover
  margin-top 80px
.post-cover-img
  min-width 100%
  max-width: 100%
  height 350px
  object-fit cover
.meta-intro
  font-size .8em
  text-transform : uppercase
  letter-spacing: 1.5px
  text-align center
  color $color-text-secondary
  line-height: 4
  position: relative
  &:after // TODO 这里应该有更好的实现方法
    content ""
    position absolute
    top 0
    left 48%
    right 48%
    bottom 98%
    transition all .4s
    background-color $color-theme-main


// post-content-inner
.post-content-inner
  display flex
  flex-direction row
  .post-content-main
    flex-basis $post-max-width
    max-width $post-max-width
  .post-content-inner-space
    flex-basis $side-toc-width


// detail post style
.post-content-inner
  font-size 1.15em
  font-family: "LXGW WenKai Lite", sans-serif;
  ul, ol
    padding-left 2em
    font-family: Merriweather
    margin 20px 0
.post-content-main
  pre
    max-width $post-max-width
    overflow-x auto
    margin 5px 0
    padding 20px
    background #eee
    > code
      font-family 'Noto Serif SC', serif
      font-size 0.85em
  h1, h2, h3, h4, h5, h6
    margin-top 23px
    margin-bottom 16px
    color: $color-text-main
  h1, h2
    &::after
      content "#"
      display inline-block
      color #e3e3e3
      margin-left 0.5rem
      font-weight: 1000
  p
    margin 20px 0
  img
    max-width 100%
  hr
    margin 24px 0
    height 3px
    border none
    background-color #e3e3e3
