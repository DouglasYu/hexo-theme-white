//@import "github-markdown.css"
// post-intro
.post-intro
  margin-bottom 30px
.post-title
  text-align center
  font-size 2.15em
  font-weight bold
  margin-bottom 20px
  font-family 'Noto Serif SC', serif
.post-cover
  margin-top 80px
.post-cover-img
  min-width 100%
  max-width: 100%
  height 350px
  object-fit cover
.meta-intro
  font-size .8em
  text-transform : uppercase
  letter-spacing: 1.5px
  text-align center
  color $color-text-secondary
  line-height: 4
  position: relative
  &:after // TODO 这里应该有更好的实现方法
    content ""
    position absolute
    top 0
    left 48%
    right 48%
    bottom 98%
    transition all .4s
    background-color $color-theme-main


// post-content-inner
.post-content-inner
  display flex
  justify-content center
  .post-content-main
    flex-basis $post-max-width
    max-width $post-max-width


// detail post style
.post-content-inner
  font-size 1.3em
  font-family: "LXGW WenKai Lite", sans-serif;
  ul, ol
    padding-left 2em
    font-family: Merriweather
    margin 20px 0
.post-content-main
  h1, h2, h3, h4, h5, h6
    margin-top 23px
    margin-bottom 16px
    color: $color-text-main
    font-family 'Noto Serif SC', serif
  h1, h2
    &::after
      content "#"
      display inline-block
      color #e3e3e3
      margin-left 0.5rem
      font-weight: border
  code
    background #eee
    font-size 0.85em
    font-family 'Noto Serif SC', serif
  pre
    max-width $post-max-width
    overflow auto
    margin 5px 0
    padding 1em
    background #eee
    > code
      font-family 'Noto Serif SC', serif
      font-size 0.85em
      background none
  p
    margin 20px 0
  img
    max-width 100%
    margin 10px 0
  iframe
    width 100%
    aspect-ratio 3.1/2
  hr
    margin 24px 0
    height 3px
    border none
    background-color #e3e3e3
  table
    border-collapse: collapse
    margin: 30px 0px
    width: 100%
    border-width: 2px
    border-style: solid
    border-color: #e3e3e3
    border-image: initial
    border-spacing: 0px
    display: table
    thead
      box-shadow: rgba(0, 0, 0, 0.05) 0px 4px 8px 0px
      display: table-header-group
      vertical-align: middle
      border-color: inherit
    th,td
      padding: .9rem
      border-width: 0.5px
      border-style: solid
      border-color: rgb(248, 248, 248)
      border-image: initial
    tbody
      display: table-row-group
      vertical-align: middle
      border-color: inherit
      tr
        display: table-row
        vertical-align: inherit
        border-color: inherit
